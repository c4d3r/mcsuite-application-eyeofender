<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Maxim\Module\TicketBundle\Entity\TicketReply" table="ticket_reply">
    <indexes>
      <index name="IDX_D598A56BA76ED395" columns="user_id"/>
      <index name="FK_D598A56B700047D2" columns="ticket_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="text" column="text" nullable="true"/>
    <field name="date" type="datetime" column="date" nullable="false"/>

    <many-to-one field="ticket" target-entity="Ticket" inversed-by="replies">
      <join-columns>
        <join-column name="ticket_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

    <many-to-one field="user" target-entity="\Maxim\CMSBundle\Entity\User">
      <join-columns>
          <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
