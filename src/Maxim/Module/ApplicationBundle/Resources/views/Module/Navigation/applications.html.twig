{% if applications is defined and applications %}
    <li class="dropdown-submenu">
        <a tabindex="-1" href="{{ path('applications_list') }}">Applications</a>
        <ul class="dropdown-menu">
            {% for application in applications %}

                <li>
                    <a href="#">{{ application.name }}</a>
                </li>
            {% else %}
                <li>
                    <a href="#">There are no open applications</a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endif %}