{% extends 'SonataAdminBundle:CRUD:base_list_flat_inner_row.html.twig' %}

{% block row %}

    {% if object.user.hasRole('ROLE_STAFF')%}
        <span class="label label-info">Staff</span>
    {% endif %}

    {{ object|render_list_element(admin.list['user']) }} -
    {{ object|render_list_element(admin.list['date']) }} <br />

    <small>
        {{ object.text|purify }}
    </small>
{% endblock %}