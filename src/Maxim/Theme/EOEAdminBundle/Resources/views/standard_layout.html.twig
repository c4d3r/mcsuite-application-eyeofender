    <script src="{{ asset('bundles/maximthemeeoeadmin/js/sortable/jquery.sortable.js') }}" cache="false"></script>
    <script>
        $(function(){
            $('input').each(function(){
                var inputAttr = $(this).attr("type")
                if($.inArray(inputAttr, ["checkbox", "submit"]) == -1) {
                    $(this).addClass("form-control");
                }
            });
        })
    </script>
{% endblock %}
</body>
</html>
