        <link rel="stylesheet" href="{{ asset('bundles/maximthemeeoeadmin/css/app.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/maximthemeeoeadmin/css/maxim-extra.css') }}" type="text/css" media="all" />

