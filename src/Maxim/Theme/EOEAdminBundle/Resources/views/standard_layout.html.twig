                    </span>
                    {{ app.user.username }}<b class="caret"></b>
                </a>
                <ul class="dropdown-menu animated fadeInRight">
                    <span class="arrow top"></span>
                    <li>
                        <a href="{{ path('home') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('account') }}">Settings</a>
                    </li>
                    {#<li>
                        <a href="#">
                            <span class="badge bg-danger pull-right">3</span>
                            Notifications
                        </a>
                    </li>#}
