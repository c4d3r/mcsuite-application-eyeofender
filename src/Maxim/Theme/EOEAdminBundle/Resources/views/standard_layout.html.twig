    <!-- Bootstrap -->
    <script src="{{ asset('bundles/maximthemeeoeadmin/js/bootstrap.js') }}"></script>
    <!-- App -->
    <script src="{{ asset('bundles/maximthemeeoeadmin/js/app.js') }}"></script>
    <script src="{{ asset('bundles/maximthemeeoeadmin/js/app.plugin.js') }}"></script>
