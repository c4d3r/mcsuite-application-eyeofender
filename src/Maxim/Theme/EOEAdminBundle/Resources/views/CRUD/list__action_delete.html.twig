{% if admin.isGranted('DELETE', object) and admin.hasRoute('delete') %}
    <a href="{{ admin.generateObjectUrl('delete', object) }}" class="btn btn-s-md btn-default delete_link" style="padding:0;min-width: 70px;" title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}">
        <i class="icon-remove"></i>
        {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}
