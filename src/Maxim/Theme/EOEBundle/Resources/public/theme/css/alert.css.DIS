.alert {
    width:100%;
    padding:6px;
    border-radius:3px;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.alert-info {
    background-color: rgb(41, 158, 224);
    box-shadow: 1px 1px 0px 1px rgb(36, 85, 122);
    color:#FFF;
}
.alert-success {
    background-color: #89C284;
    box-shadow: 1px 1px 0 1px #394B42;
    color: #2F3C2F;
}
.alert-danger, .alert-error {
    background-color: #B6494D;
    box-shadow: 1px 1px 0 1px #4E3F42;
    color:#FFF;
}
.alert-warning, .alert-block {
    background-color: #C2BC81;
    box-shadow: 1px 1px 0 1px #3F4133;
    color: #4E4E4A;
}