{% extends 'MaximCMSBundle:Default:index.html.twig' %}

{% block body %}
<div class="page">
    <h3 class="page-header">Shop - step 2</h3>
	<div class="page-content">

		<form action="{{ path('shop_confirm') }}" method="post" style="margin-bottom:20px;">
            <div class="well form-horizontal">
                <div class="form-group" style="margin:0;">
                    <label for="shop-name" class="col-lg-2 control-label">Username: </label>
                    <div class="col-lg-10">
                        <input type="text" name="_ign" id="shop-name" class="form-control" value="{{ app.user.username }}" placeholder="Place your minecraft username in here">
                    </div>
                </div>
            </div>
			<div class="shopTerms">
				<div class="box-scroll-content well" id="shop-terms">
                    {{ getNode('shop.terms') }}
                </div>
			</div>
			<div class="ShopConfirmBox">
                <div class="controls">
                   {# <label class="checkbox">
                        <input type="checkbox" name="donation_terms" id="shop-terms-accept" disabled="disabled"><span id="shop-terms-text">Please read our terms first, all the way to the bottom</span>
                    </label>#}
                    <input type="submit" value="Agree and continue" class="btn ShopTermsAcceptContinue btn-primary" id="shop-terms-continue" name="confirm_donation_submit" style="margin-top:10px;"/>
                </div>
				<input type="hidden" name="_previousChoice" value="{{ item }}" />
			</div>
		</form>
	</div>
</div>
{% endblock %}
