<h3>Login</h3>
<div class="alert" id="login-message" style="display:none;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>

<form id="myForm" class="form-horizontal" action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <div class="col-lg-10">
            <input type="text" class="form-control" name="_login_username" id="login_username" placeholder="Username">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10">
            <input type="password" name="_login_password" class="form-control" id="login_password" placeholder="Password">
            <div class="checkbox">
                <label>
                    <input id="remember_me" name="_remember_me" type="checkbox"> Remember me
                </label>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-default">Sign in</button>
                <a href="{{ path('register') }}" class="btn btn-default">Register</a>
                <a href="{{ path('account_forgot_password') }}" class="btn btn-default">Forgot password</a>
            </div>
        </div>
    </div>
</form>

