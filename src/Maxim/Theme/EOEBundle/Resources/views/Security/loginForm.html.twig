{% extends 'MaximCMSBundle:Default:index.html.twig' %}

{% block title %}Login{% endblock title %}

{% block body %}
    <div class="page">
        <div id="login_statusbox" class="alert"></div>
        <h3 class="page-header">Login</h3>

        <div class="page-content">
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <form id="frmLogin" class="form-horizontal" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <div>
                            <input type="text" class="form-control" name="_login_username" id="login_username" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group clearfix clearfix-left">
                        <div>
                            <input type="password" name="_login_password" class="form-control" id="login_password" placeholder="Password">
                            <div class="checkbox" style="margin-bottom:20px;">
                                <label>
                                    <input id="remember_me" name="_remember_me" type="checkbox"> Remember me
                                </label>
                            </div>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-default left">Sign in</button>
                                <div style="margin-left:75px;">
                                    <a href="{{ path('register') }}" >Register</a><br/>
                                    <a href="{{ path('account_forgot_password') }}" style="position: relative;top: 6px;">Forgot password</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            {% else %}
                <p>You are already logged in, you are being redirected to the home page in <span id="redirect_countdown">5</span></p>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block scripttags %}
    <script>AJAX.redirect("{{ path('home') }}", $('#redirect_countdown'));</script>
{% endblock %}
