{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div>
        <h5>Username</h5>
        <p>{{ user.username }}</p>
    </div>
    <div>
        <h5>E-mail</h5>
        <p>{{ user.email }}</p>
    </div>
    <div>
        <h5>Phone</h5>
        <p>{{ user.phone }}</p>
    </div>
    <div>
        <h5>Skype</h5>
        <p>{{ user.skype }}</p>
    </div>
    <div>
        <h5>Date of birth</h5>
        <p>{{ user.dateOfBirth|date('jS \\of F Y') }}</p>
    </div>
    <div>
        <h5>Gender</h5>
        <p>{{ user.gender }}</p>
    </div>
    <div>
        <h5>Timezone</h5>
        <p>{{ user.timezone }}</p>
    </div>
    <div>
        <h5>Country</h5>
        <p>{{ user.location }}</p>
    </div>
    <div>
        <h5>Biography</h5>
        <div>{{ user.biography|purify }}</div>
    </div>
</div>
