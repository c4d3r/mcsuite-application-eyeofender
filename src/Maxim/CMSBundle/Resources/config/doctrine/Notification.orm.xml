<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Maxim\CMSBundle\Entity\Notification" table="notification">
    <indexes>
      <index name="IDX_BF5476CAA76ED395" columns="user_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="string" column="text" length="255" nullable="true"/>
    <field name="createdOn" type="datetime" column="createdOn" nullable="false"/>
    <field name="readOn" type="datetime" column="readOn" nullable="true"/>
    <field name="type" type="string" column="type" length="255" nullable="false"/>

    <many-to-one field="user" target-entity="User" inversed-by="notifications">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
