{% extends 'MaximCMSBundle:Default:index.html.twig' %}

{% block body %}
<div class="page">
	<div class="page-header">
		<h1>Shop - Confirm</h1>
	</div>
	<div class="page-content">
		<div class="ShopConfirmBox-payment">
			<table>
				<tr>
					<td>Rank / Item:</td>
					<td>{{ item.name }}</td>
				</tr>
				<tr>
					<td>User:</td>
					<td>{{ user.username }}</td>
				</tr>
				<tr>
					<td>Price:</td>
					<td>{{ item.amount }}</td>
				</tr>
			</table>
			<div class="ShopConfirmBox-payment-method">
				<form target="paypal" action="{{ donate.paypal }}" method="post">
					<input type="hidden" name="cmd" value="_xclick" />
					<input type="hidden" name="business" value="{{ donate.email }}" />
					<input type="hidden" name="item_name" value="Item: {{ item.name }}" />
					<input type="hidden" name="item_number" value="1" />
					<input type="hidden" name="amount" value="{{ item.amount }}" />
					<input type="hidden" name="no_shipping" value="1" />
					<input type="hidden" name="no_note" value="1" />
					<input type="hidden" name="currency_code" value="{{ donate.currency }}" />
					<input type="hidden" name="lc" value="US" />
					<input type="hidden" name="bn" value="PP-BuyNowBF" />
					<input type="hidden" name="rm" value="2" />
					<input type="hidden" name="return" value="{{ donate.return }}" />
					<input type="hidden" name="cancel_return" value="{{ donate.cancel }}" />
					<input type="hidden" name="notify_url" value="{{ donate.ipn }}" />
					<input type="hidden" name="custom" value="{{ user.custom }}" />
					<input type="image" value="Submit" alt="Submit" src="https://www.paypalobjects.com/en_US/i/bnr/horizontal_solution_PPeCheck.gif" />
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}
