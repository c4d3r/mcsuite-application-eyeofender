{% extends sonata_block.templates.block_base %}

{% block block %}
    {% if is_granted("ROLE_SUPER_ADMIN") %}
        <section class="panel panel-default">
            <header class="panel-heading">{{ settings.title }}</header>

            <div class="sonata-purchases-container">
                <ul class="list-group alt">
                   {% for key, purchase in latestPurchases %}
                       <li class="list-group-item">
                           <div class="media">
                               <span class="pull-left thumb-sm">
                                   <img src="http://minotar.net/helm/{{ purchase.user.username }}" alt="{{ purchase.user.username }}" class="img-circle">
                               </span>
                               <div class="pull-right text-muted m-t-sm"> {{ purchase.amount }}  £</div>
                               <div class="media-body">
                                   <div>
                                       <a href="{{ path('admin_maxim_cms_storeitem_edit', { 'id': purchase.storeItem.id }) }}">{{ purchase.storeItem.name }}</a>
                                   </div>
                                   <small class="text-muted">{{ purchase.date|prettydate }}</small>
                               </div>
                           </div>
                       </li>
                   {% endfor %}
                </ul>
            </div>
        </section>
    {% endif %}
{% endblock %}